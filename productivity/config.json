// config.json
{
  "rules": [
    {
      "group": "Work",
      "color": "blue",
      "collapsed": true,
      "urls": [
        "*://docs.google.com/*",
        "*://mail.google.com/*",
        "*://*.slack.com/*"
      ]
    },
    {
      "group": "Learn",
      "color": "green",
      "collapsed": false,
      "urls": [
        "*://*.coursera.org/*",
        "*://*.edx.org/*",
        "*://*.khanacademy.org/*"
      ]
    },
    {
      "group": "Social",
      "color": "pink",
      "collapsed": true,
      "urls": [
        "*://www.facebook.com/*",
        "*://www.twitter.com/*",
        "*://www.instagram.com/*"
      ]
    }
  ],
  "settings": {
    "autoCleanEmptyGroups": true,
    "caseSensitive": false
  }
}
